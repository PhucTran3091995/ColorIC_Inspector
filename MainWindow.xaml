<Window x:Class="ColorIC_Inspector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ColorIC Inspector" Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BgDark}">

    <Window.Resources>
        <!-- COLOR PALETTE -->
        <SolidColorBrush x:Key="BgDark" Color="#0F172A"/>
        <SolidColorBrush x:Key="BgPanel" Color="#1E293B"/>
        <SolidColorBrush x:Key="BgInput" Color="#020617"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#94A3B8"/>
        <SolidColorBrush x:Key="Accent" Color="#2563EB"/>
        <SolidColorBrush x:Key="AccentHover" Color="#1D4ED8"/>
        <SolidColorBrush x:Key="BorderColor" Color="#334155"/>
        <SolidColorBrush x:Key="Success" Color="#22C55E"/>
        <SolidColorBrush x:Key="Error" Color="#EF4444"/>

        <!-- MODERN BUTTON STYLE -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentHover}"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- NAV BUTTON STYLE (Transparent) -->
        <Style x:Key="NavButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Style.Triggers>
                <Trigger Property="Tag" Value="Active">
                    <Setter Property="Background" Value="{StaticResource Accent}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- MODERN COMBOBOX STYLE -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource BgInput}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="128*"/>
            <ColumnDefinition Width="817*"/>
            <ColumnDefinition Width="421*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="{DynamicResource BgDark}" Padding="20,15" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Grid.ColumnSpan="3">
            <DockPanel>
                <!-- Left: Logo & Title -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Border CornerRadius="6" Padding="8" Margin="0,0,15,0" Background="{DynamicResource AccentHover}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="4" >
                            <Image Source="/icons8-ic-50.png" Width="50" Height="50" Stretch="Uniform"/>
                        </StackPanel>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="ColorIC INSPECTOR" Foreground="White" FontWeight="Bold" FontSize="18"/>
                        <TextBlock Text="V1.0.0 | By Wolf" Foreground="{StaticResource TextSecondary}" FontSize="12" Height="21"/>
                    </StackPanel>
                </StackPanel>

                <!-- Right: Navigation Buttons -->
                <StackPanel DockPanel.Dock="Right" Background="{StaticResource BgDark}" Margin="0" Width="212" Orientation="Horizontal" Height="42" HorizontalAlignment="Right">
                    <UIElement.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </UIElement.RenderTransform>
                    <Border CornerRadius="6" Background="{StaticResource BgDark}" Padding="2">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="btnNavMain" Style="{StaticResource NavButton}" Width="100" Click="btnNavMain_Click" Tag="Active">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Image Source="/icons8-menu-100.png" Width="16" Height="16" Stretch="Uniform" VerticalAlignment="Center"/>
                                    <TextBlock Text="MAIN" Margin="6,0,0,0" VerticalAlignment="Center"
                           Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" FontWeight="Bold"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="btnNavSetting"
                                Style="{StaticResource NavButton}"
                                Width="111"
                                Click="btnNavSetting_Click">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Image Source="/icons8-setting-100.png" Width="16" Height="16" Stretch="Uniform" VerticalAlignment="Center"/>
                                    <TextBlock Text="SETTING" Margin="6,0,0,0" VerticalAlignment="Center"
                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" FontWeight="Bold"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- CONTENT AREA -->
        <Grid Grid.Row="1" Margin="20,20,20,20" Grid.ColumnSpan="3">

            <!-- VIEW: MAIN DASHBOARD -->
            <Grid x:Name="viewMain" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- IC Selection -->
                    <RowDefinition Height="*" />
                    <!-- Camera + Panels -->
                </Grid.RowDefinitions>

                <!-- Top Menu: IC Selection -->
                <Border Grid.Row="0" Background="{StaticResource BgPanel}" CornerRadius="8" Padding="15" Margin="0,0,0,20" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                    <StackPanel Orientation="Horizontal" Margin="-6,0,0,0">
                        <Image Source="/icons8-chip-32.png" Width="20" Height="20" Stretch="Uniform" OpacityMask="Black"/>
                        <TextBlock Text="INSPECTION TYPE SELECTION:" Foreground="{StaticResource Accent}" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,20,0" Width="190" Padding="10,0,10,0"/>
                        <ComboBox x:Name="cbICTypes" Width="789" DisplayMemberPath="Name" SelectionChanged="cbICTypes_SelectionChanged" FontWeight="Black" Foreground="#FF0E0E0E"/>
                    </StackPanel>
                </Border>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <!-- Camera Area -->
                        <ColumnDefinition Width="1*" />
                        <!-- Right Panel -->
                    </Grid.ColumnDefinitions>

                    <!-- Camera View -->
                    <Border Grid.Column="0"
                        Background="Black"
                        CornerRadius="8"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="2"
                        Margin="0,0,20,0"
                        ClipToBounds="True">
                        <Grid>
                            <!-- Camera image -->
                            <Image x:Name="imgCameraFeed"
                                   Stretch="UniformToFill"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   SnapsToDevicePixels="True"
                                   UseLayoutRounding="True" />

                            <!-- Overlay rectangle (positioned) -->
                            <Rectangle Stroke="#EAB308"
                               StrokeThickness="2"
                               StrokeDashArray="4 2"
                               Opacity="0.6"
                               Width="640"
                               Height="410"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="0,36,0,0"
                               IsHitTestVisible="False"/>

                            <!-- Status Overlay (hidden by default) -->
                            <Border Background="#2563EB"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="20"
                                    Padding="10,5"
                                    CornerRadius="4"
                                    Visibility="Collapsed"
                                    x:Name="overlayProcessing"
                                    IsHitTestVisible="False">
                                <TextBlock Text="PROCESSING..." Foreground="White" FontWeight="Bold"/>
                            </Border>
                            <!-- Start button placed inside border but not covering whole image -->
                            <Button Content="START INSPECTION"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,20"
                                Width="200"
                                Height="45"
                                Click="btnStart_Click"
                                FontSize="16" />
                        </Grid>
                    </Border>


                    <!-- Right Panel -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <!-- Status -->
                            <RowDefinition Height="2*" />
                            <!-- Log -->
                        </Grid.RowDefinitions>

                        <!-- Status Panel -->
                        <Border Grid.Row="0" Background="{StaticResource BgPanel}" CornerRadius="8" Margin="0,0,0,20" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Background="#0F172A" Padding="10" CornerRadius="8,8,0,0">
                                    <TextBlock Text="STATUS" Foreground="{StaticResource TextSecondary}" FontWeight="Bold"/>
                                </Border>
                                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock x:Name="txtStatus" Text="READY" FontSize="64" FontWeight="Black" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Log Panel -->
                        <Border Grid.Row="1" Background="{StaticResource BgPanel}" CornerRadius="8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Background="#0F172A" Padding="10" CornerRadius="8,8,0,0">
                                    <DockPanel>
                                        <DockPanel.Background>
                                            <ImageBrush/>
                                        </DockPanel.Background>
                                        <TextBlock Text="INSPECTION LOG" Foreground="{StaticResource TextSecondary}" FontWeight="Bold"/>
                                        <Button Content="CLEAR" DockPanel.Dock="Right" Foreground="{DynamicResource Error}" Padding="5,0" FontSize="10" Click="btnClearLogs_Click" Width="85" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}"/>
                                    </DockPanel>
                                </Border>
                                <ListView x:Name="lvLogs" Grid.Row="1" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextPrimary}" Margin="5">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Timestamp}" Width="80"/>
                                            <GridViewColumn Header="IC Name" DisplayMemberBinding="{Binding ICName}" Width="120"/>
                                            <GridViewColumn Header="Result" DisplayMemberBinding="{Binding Result}" Width="80"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>

            <!-- VIEW: SETTINGS -->
            <Grid x:Name="viewSetting" Visibility="Collapsed">
                <!-- Settings view content -->
            </Grid>
        </Grid>
    </Grid>
</Window>